{
    "compileOnSave" : true,

    "compilerOptions": {
        "target": "esnext",
        "lib": [ "esnext", "webworker" ],
        "module": "esnext",

        "outDir": "web/",

        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "useDefineForClassFields": true
    },
    "include": ["src/worker.ts"],
    "exclude": [
        "game/*",
    ]
}
